# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (Railway PostgreSQL)
DATABASE_URL=postgresql://postgres:password@hostname:5432/railway

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_here_make_it_long_and_secure
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# M-Pesa Configuration (Production)
MPESA_CONSUMER_KEY=your_production_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_production_mpesa_consumer_secret
MPESA_SHORTCODE=your_business_shortcode
MPESA_PASSKEY=your_production_mpesa_passkey
MPESA_CALLBACK_URL=https://your-backend-url.railway.app/api/mpesa/callback

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
