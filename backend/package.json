{
  "name": "zion-grocery-backend",
  "version": "1.0.0",
  "description": "Backend API for Zion Grocery Dashboard - Node.js/Express with PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "migrate": "knex migrate:latest",
    "migrate:prod": "NODE_ENV=production knex migrate:latest",
    "db:setup": "npm run migrate",
    "build": "echo 'No build step required for backend'",
    "postinstall": "npm run migrate:prod"
  },
  "keywords": [
    "grocery",
    "pos",
    "inventory",
    "sales",
    "api"
  ],
  "author": "Zion Groceries",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "socket.io": "^4.7.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0"
  }
}
