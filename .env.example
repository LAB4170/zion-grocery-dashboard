# Zion Grocery Dashboard - Environment Configuration Template
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zion_grocery_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Test Database (for testing environment)
DB_NAME_TEST=zion_grocery_db_test

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5000

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Database Performance Monitoring
DB_MONITORING_ENABLED=true
DB_SLOW_QUERY_THRESHOLD=1000
DB_CONNECTION_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# Application Metadata
APP_NAME=Zion Grocery Dashboard
APP_VERSION=1.0.0
SERVER_NAME=Zion Grocery Server
